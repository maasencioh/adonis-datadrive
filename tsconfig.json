{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "inlineSourceMap": true,
    "strict": true,
    "lib": ["es2021"],
    "target": "es2021",
    "skipLibCheck": true,
    "types": ["@adonisjs/core", "node"]
  },
  "include": ["./adonis-typings/**/*", "./src/**/*", "./providers/**/*"]
}
